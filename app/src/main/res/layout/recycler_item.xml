<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardBackgroundColor="#fff"
    app:cardElevation="5dp"
    android:padding="15dp"
    android:paddingRight="5dp"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingTop="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_item_newstopimage"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:visibility="gone"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <TextView
                android:id="@+id/tv_item_newstitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:singleLine="true"
                android:text="demo"
                android:textColor="#000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_item_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="demo"
                android:layout_alignParentBottom="true"
                android:textColor="@android:color/darker_gray"
                android:layout_marginLeft="5dp"
              />

            <TextView
                android:id="@+id/tv_item_readcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="10dp"
                android:drawableLeft="@mipmap/ic_subtitles_grey600"
                android:textColor="@android:color/darker_gray"
                android:text="demo"
                />
            <TextView
                android:id="@+id/tv_item_edittime"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:textColor="@android:color/darker_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>